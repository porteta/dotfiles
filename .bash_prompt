# @gf3’s Sexy Bash Prompt, inspired by “Extravagant Zsh Prompt”
# Shamelessly copied from https://github.com/gf3/dotfiles
# Screenshot: http://i.imgur.com/s0Blh.png

if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
	export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
	export TERM=xterm-256color
fi

# BLACK="\033[1;30m"
# MAGENTA="\033[1;31m"
# ORANGE="\033[1;33m"
# GREEN="\033[1;32m"
# PURPLE="\033[1;35m"
# WHITE="\033[1;37m"

BLACK="\033[1;30m"
RED="\033[1;31m"
GREEN="\033[1;32m"
YELLOW="\033[1;33m"
BLUE="\033[1;34m"
MAGENTA="\033[1;35m"
CYAN="\033[1;36m"
WHITE="\033[1;37m"

if tput setaf 1 &> /dev/null; then
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	BOLD=""
	RESET="\033[m"
fi

export BLACK
export RED
export GREEN
export YELLOW
export BLUE
export MAGENTA
export CYAN
export WHITE
export BOLD
export RESET

function parse_git_dirty() {
	if [[ $(git status 2> /dev/null | tail -n1) != *"working directory clean"* ]]; then
		echo "✘"
	else
		echo "✓"
	fi
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/(\1) $(parse_git_dirty)/"
}
# export PS1="\[$BLACK\]BLACK \[$RED\]RED \[$GREEN\]GREEN \[$YELLOW\]YELLOW \[$BLUE\]BLUE \[$MAGENTA\]MAGENTA \[$CYAN\]CYAN \[$WHITE\]WHITE "
export PS1="\[$BLUE\]\u \[$GREEN\]\w\[$WHITE\]\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" \")\[$CYAN\]\$(parse_git_branch)\[$WHITE\]\n\$ \[$RESET\]"
export PS2="\[$MAGENTA\]→ \[$RESET\]"
